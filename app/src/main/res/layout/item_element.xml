<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="element"
            type="com.example.davit_zakaryan.mvvmapp.data.model.Element" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_small"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/spacing_medium">

        <TextView
            android:id="@+id/item_element_level_text"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="@{String.valueOf(element.level)}"
            android:textSize="16sp"
            app:level_background="@{element.level}"
            tools:text="10" />

        <TextView
            android:id="@+id/item_element_title_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/item_element_level_text"
            android:text="@{element.name}"
            tools:text="Title" />

        <TextView
            android:id="@+id/item_element_subtitle_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/item_element_title_text"
            android:layout_below="@+id/item_element_title_text"
            android:layout_marginTop="0dp"
            android:text="@{element.shortDesc}"
            tools:text="Subtitle" />

    </RelativeLayout>
</layout>
